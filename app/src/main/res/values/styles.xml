        <!--
        <item name="icdIconSize">30dp</item>
        <item name="icdIconColor">@color/custom_color</item>
        <item name="icdListHeaderStyle">@style/CustomHeaderStyle</item>
        -->
    </style>

    <!-- Custom style for the list headers, again don't forget the parent! -->
